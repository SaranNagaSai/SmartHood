# Server Configuration
PORT=5000
NODE_ENV=development

# CORS (comma-separated list of allowed frontend origins)
CORS_ORIGINS=

# MongoDB Connection
# For local MongoDB: mongodb://localhost:27017/smarthood
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/smarthood
MONGODB_URI=your_mongodb_connection_string_here

# JWT Secret (Generate a random secure string)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# Admin Allowlist (comma-separated). If both are empty, no admin access is granted.
ADMIN_EMAIL_ALLOWLIST=
ADMIN_PHONE_ALLOWLIST=

# Web Push (VAPID) - required for push delivery
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=

# Firebase Admin SDK (FCM) Configuration
# Provide ONE of the following:
# - FIREBASE_SERVICE_ACCOUNT_JSON: full service account JSON as a single-line JSON string
# - FIREBASE_SERVICE_ACCOUNT_PATH: absolute/relative path to a serviceAccountKey.json file
FIREBASE_SERVICE_ACCOUNT_JSON=
FIREBASE_SERVICE_ACCOUNT_PATH=

# Cloudinary Configuration (Optional - for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email Configuration (Optional - for email notifications)
# For Gmail: Generate app password at https://myaccount.google.com/apppasswords
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
